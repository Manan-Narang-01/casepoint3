@model MVCApp.Models.Student
@{
    ViewData["Title"]="Create";
    Layout="~/Views/Shared/StudentLayout.cshtml";
}
<form asp-action="Create" method="post">
<div class="form-group">
<label asp-for="c_studname">Student Name</label>
<input asp-for="c_studname" class="form-control"/>
<span asp-validation-for="c_studname" class="text-danger"></span>
</div>

<div class="form-group">
<label asp-for="c_dob">Date Of Birth</label>
<input asp-for="c_dob" type="date" class="form-control"/>
<span asp-validation-for="c_dob" class="text-danger"></span>
</div>

<div class="form-group">
<label asp-for="c_stream">Stream</label>
<input asp-for="c_stream" class="form-control"/>
<span asp-validation-for="c_stream" class="text-danger"></span>
</div>
<button type="submit" class="btn btn-primary">Create</button>

</form>

@section Scripts{
    @{await Html.RenderPartialAsync("ValidationScripts");}
}
